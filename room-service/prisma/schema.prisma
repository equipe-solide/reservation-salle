generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model equipements {
  id            Int     @id @default(autoincrement())
  nomEquipement String  @db.VarChar(40)
  description   String? @db.VarChar(75)
  dispo         Boolean @default(true)
  rooms         rooms[]
}

model rooms {
  id           Int          @id @default(autoincrement())
  equipementId Int?
  nomSalle     String       @db.VarChar(40)
  lieu         String       @db.VarChar(40)
  createdAt    DateTime     @default(now()) @db.Timestamp(0)
  equipements  equipements? @relation(fields: [equipementId], references: [id], onDelete: Cascade, map: "equipement_fk")

  @@index([equipementId], map: "equipement_fk")
}
