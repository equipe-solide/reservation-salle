generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root@localhost:3306/soa_reservation_db"
}

model notifications {
  id           Int      @id @default(autoincrement())
  type         String   @default("email") @db.VarChar(20)
  message      String   @db.VarChar(75)
  destinataire Int
  statut       String   @default("en attente") @db.VarChar(20)
  created_at   DateTime @default(now()) @db.Timestamp(0)
}

model reservations {
  id               Int       @id @default(autoincrement())
  date_heure_debut DateTime  @db.DateTime(0)
  date_heure_fin   DateTime? @db.DateTime(0)
  statut           String    @default("confirme") @db.VarChar(20)
  created_at       DateTime  @default(now()) @db.Timestamp(0)
}
